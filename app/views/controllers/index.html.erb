<p id="notice"><%= notice %></p>

<h1>Controllers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Gioco</th>
      <th>Disponibilita</th>
      <th>Prezzo</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @controllers.each do |controller| %>
      <tr>
        <td><%= controller.nome %></td>
        <td><%= controller.gioco %></td>
        <td><%= controller.disponibilita %></td>
        <td><%= controller.prezzo %></td>
        <td><%= link_to 'Show', controller %></td>
        <td><%= link_to 'Edit', edit_controller_path(controller) %></td>
        <td><%= link_to 'Destroy', controller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Controller', new_controller_path, class: 'btn btn-primary' %>
