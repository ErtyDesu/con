<p id="notice"><%= notice %></p>

<h1>Controllers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Gioco</th>
      <th>Disponibilita</th>
      <th>Prezzo</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @controllers.each do |controller| %>
      <tr>
        <td><%= controller.nome %></td>
        <td><%= controller.gioco %></td>
        <td><%= controller.disponibilita %></td>
        <td><%= controller.prezzo %></td>
        <td>
          <% if controller.cover.attached? %>
          <%= link_to (image_tag url_for(controller.cover) ,:class => "w-50"), prodotti %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_controller_path(controller), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', controller, method: :delete, data: { confirm: 'Sei sicuro?' },class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo Controller', new_controller_path, class: 'btn btn-primary' %>
